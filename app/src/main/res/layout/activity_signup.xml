<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_header_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.app.ekottel.activity.SignupActivity">

    <ImageView
        android:layout_width="@dimen/_130dp"
        android:layout_height="@dimen/_180dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40dp"
        android:layout_marginRight="@dimen/_40dp"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_select_country"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:elevation="@dimen/_10dp"
            android:padding="@dimen/_5dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_signup_country"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_10dp" />

            <TextView
                android:id="@+id/tv_signup_select_country"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_toLeftOf="@+id/tv_signup_arrow_down"
                android:layout_toRightOf="@+id/iv_signup_country"
                android:background="@android:color/transparent"
                android:fontFamily="@font/ubuntu_light"
                android:gravity="center_vertical"
                android:textColor="#434343"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_signup_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_25dp"
                android:background="@android:color/transparent"
                android:textColor="#434343"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:padding="@dimen/_5dp"
            android:layout_marginTop="@dimen/_25dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_signup_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_25dp"
                android:background="@android:color/transparent"
                android:textColor="#434343"
                android:textSize="@dimen/text_24sp" />

            <EditText
                android:id="@+id/et_signup_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_signup_mobile"
                android:background="@android:color/transparent"
                android:hint="@string/signup_hint_mobile_number"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="15"
                android:fontFamily="@font/ubuntu_light"
                android:textColor="#434343"
                android:textColorHint="#434343"
                android:layout_marginLeft="@dimen/_10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_16sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_signup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/submit_button_bg">

            <TextView
                android:id="@+id/tv_signup_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/signup_btn_signup"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bbbb"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_signup_login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/_20dp"
                android:fontFamily="@font/ubuntu_medium"
                android:paddingRight="@dimen/_20dp"
                android:text="@string/signup_btn_login"
                android:textColor="#000"
                android:textSize="@dimen/text_16sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
