<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.app.ekottel.activity.SupportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_support_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp">

            <TextView
                android:id="@+id/tv_support_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/more_back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:background="@drawable/ic_support" />

            <TextView
                android:id="@+id/tv_support_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15dp"
                android:gravity="center_vertical"
                android:text="@string/support_header_name"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="#fff"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/_100dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_support_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_support_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_12sp"
            android:fontFamily="@font/ubuntu_regular"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:background="#e0e0e0"></View>

    </LinearLayout>


    <ListView
        android:id="@+id/support_list"
        android:layout_width="match_parent"
        android:background="#EAE7E7"
        android:layout_height="match_parent"
        android:dividerHeight="0.5dp" />

</LinearLayout>
