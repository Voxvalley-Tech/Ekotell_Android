<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_drop_box"
        android:layout_width="wrap_content"
        android:background="@drawable/shadow_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_contact_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_contacts_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14dp"
                    android:gravity="center"
                    android:padding="@dimen/_8dp"
                    android:text=""
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_contact_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_8dp"
                    android:paddingTop="@dimen/_8dp"
                    android:paddingRight="@dimen/_15dp"
                    android:paddingBottom="@dimen/_8dp"
                    android:text="@string/contacts_popup_details_message"
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/text_14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_bar"
                android:layout_width="@dimen/_180dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#A59C9C" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contacts_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14dp"
                    android:gravity="center"
                    android:padding="@dimen/_8dp"
                    android:text=""
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_contact_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_8dp"
                    android:paddingTop="@dimen/_8dp"
                    android:paddingRight="@dimen/_20dp"
                    android:paddingBottom="@dimen/_8dp"
                    android:text="@string/contacts_popup_invite_friends_message"
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>