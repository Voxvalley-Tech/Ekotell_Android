<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--todo button-->
    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_marginTop="@dimen/_7dp"
            android:background="@color/transparent"
            android:gravity="left"
            android:layout_weight="1"
            android:padding="@dimen/_5dp"
            android:text="Call History"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_18sp" />

        <TextView
            android:id="@+id/dateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_marginTop="@dimen/_7dp"
            android:background="@color/transparent"
            android:gravity="right"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_weight="1"
            android:padding="@dimen/_5dp"
            android:text="Day"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/error_red"
            android:textSize="@dimen/text_18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/date_layout"
        android:background="#c4c4c4" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_layout"
        android:padding="@dimen/_7dp">


        <TextView
            android:id="@+id/call_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20sp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_toRightOf="@+id/call_type_img"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/black_50"
            android:textSize="@dimen/text_17sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text1"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_7dp"
            android:layout_toLeftOf="@+id/call_duration_tv"
            android:layout_toRightOf="@+id/call_type_img"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="#a8a8a8"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/call_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text1"
            android:layout_marginRight="@dimen/_10dp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/black_50"
            android:textSize="@dimen/text_12sp" />
    </RelativeLayout>

</RelativeLayout>