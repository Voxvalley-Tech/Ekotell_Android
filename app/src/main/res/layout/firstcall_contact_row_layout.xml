<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="12dp"
    android:background="@android:color/transparent"
    android:padding="4dp">
    <!--todo button-->

    <ImageView
        android:id="@+id/infoimageView"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="@mipmap/ic_contact_avatar"
        android:focusable="false" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="@dimen/_55dp"
        android:layout_height="@dimen/_70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@mipmap/ic_contact_avatar" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_toLeftOf="@+id/infoimageView"
        android:layout_toRightOf="@+id/imageview"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp"

        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_14sp" />

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="@dimen/_15dp"
        android:layout_height="@dimen/_15dp"
        android:layout_below="@+id/text1"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_toRightOf="@+id/imageview"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview1"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_toLeftOf="@+id/infoimageView"
        android:layout_toRightOf="@+id/imageview1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_12sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignStart="@+id/text2"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_toLeftOf="@+id/infoimageView"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_12sp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignStart="@+id/text2"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_toLeftOf="@+id/infoimageView"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_12sp" />
</RelativeLayout>