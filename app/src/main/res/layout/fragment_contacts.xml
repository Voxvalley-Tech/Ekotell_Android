<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/headerTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:text="@string/app_name_capitel"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_30dp"
        android:textSize="@dimen/text_22sp"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contacts_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:paddingRight="@dimen/_5dp"
                android:text="@string/country_search"
                android:fontFamily="@font/fontawesome_webfont"
                android:textColor="#808080"
                android:textSize="@dimen/text_15sp" />

            <EditText
                android:id="@+id/et_contacts_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:ems="10"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_contacts_search_cancel"
                android:layout_toRightOf="@+id/tv_contacts_search"
                android:hint="@string/call_logs_hint_search_message"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences|textNoSuggestions|textVisiblePassword"
                android:maxLines="1"
                android:fontFamily="@font/ubuntu_light"
                android:singleLine="true"
                android:textColor="#808080"
                android:textColorHint="#808080"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_14sp" />
            <TextView
                android:id="@+id/tv_contacts_search_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_15dp"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_15dp"
                android:text="@string/search_cancel"
                android:textColor="#808080"
                android:visibility="invisible"
                android:fontFamily="@font/fontawesome_webfont"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_20sp" />
        </RelativeLayout>
