<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_alert_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/colorAccent"
                android:text="@string/alert_dialog_title"
                android:textSize="@dimen/text_16sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_below="@+id/txt_alert"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_marginTop="@dimen/_3dp"
                android:id="@+id/tv_alert_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2dp"
                android:layout_marginRight="@dimen/_2dp" 
                android:gravity="center"
                android:text="Ekottel needs following permissions in order to receive incoming calls and messages through push notifications.These permissions may vary per device model i.e different devices may show up different options to enable push notifications."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2dp"
                android:layout_marginRight="@dimen/_2dp"
                android:layout_marginTop="@dimen/_2dp" 
                android:gravity="center"
                android:text="Also, Along push notifications, Certain device models may need to enable Lock screen notifications."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2dp"
                android:layout_marginRight="@dimen/_2dp" 
                android:gravity="center"
                android:text="Essentially All or Most of below permissions are needed to properly receive incoming calls and messages."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:layout_marginTop="@dimen/_5dp" 
                android:gravity="left"
                android:text="1.Auto start permissions"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp" 
                android:gravity="left"
                android:text="2.Exempting from battery optimization"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp" 
                android:gravity="left"
                android:text="3.Enable Lock screen permissions(Show on Lock screen)"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp" 
                android:gravity="left"
                android:text="4.Notifications"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp" 
                android:gravity="left"
                android:text="5.Regular App Permissions etc."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:fontFamily="@font/ubuntu_regular"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10dp"
                android:text="Please Enable above mentioned permissions from App info By clicking 'YES' to receive incoming calls and messages."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="Ex:"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="For Xiaomi/MI device tap on Yes then enable below options"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="1. Enable Auto start."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="2. Other Permissions => Allow all permissions."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="3. Notification => Enable lock screen notification"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_marginTop="@dimen/_5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="For Huawei/Honor device tap on Yes button "
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="1. Notification => Lock Screen notification=> show"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="2. Permission=> Allow all permissions"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_2dp"
                android:gravity="left"
                android:text="3. Battery usage detalis => App launch => Enable Manage all automatically"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_below="@+id/txt_alert"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:background="#66ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_layout"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_20dp">

            <Button
                android:id="@+id/btn_alert_cancel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_weight="1"
                android:background="@drawable/alert_dialog_no_bg"
                android:gravity="center"
                android:padding="@dimen/_7dp"
                android:text="@string/alert_dialog_btn_no"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp" />

            <Button
                android:id="@+id/btn_alert_ok"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:background="@drawable/alert_dialog_yes_bg"
                android:gravity="center"
                android:padding="@dimen/_7dp"
                android:text="@string/alert_dialog_btn_yes"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>