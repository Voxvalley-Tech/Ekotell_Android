<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_splash_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25dp"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:layout_marginTop="@dimen/_25dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_chat_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_layout"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_20dp">

        <Button
            android:id="@+id/chat_btn_alert_cancel"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_35dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_yes_bg"
            android:gravity="center"
            android:padding="@dimen/_7dp"
            android:text="@string/chat_alert_dialog_btn_no"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />

        <Button
            android:id="@+id/chat_btn_alert_ok"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_yes_bg"
            android:gravity="center"
            android:padding="@dimen/_7dp"
            android:text="@string/chat_alert_dialog_btn_yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

</LinearLayout>