<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ll_subscribe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="#671441"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_subscribe_package_buy_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp">

            <TextView
                android:id="@+id/tv_subscribe_package_buy_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:text="@string/more_back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_subscription_packages" />

            <TextView
                android:id="@+id/tv_subscribe_package_buy_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15dp"
                android:gravity="center_vertical"
                android:text="@string/subscribe_package_header"
                android:textColor="#fff"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_subscribe_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/subscribe_package_name"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_details_package_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/subscribe_package_cost"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_details_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/subscribe_package_validity"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_details_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:gravity="center"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/subscribe_package_max_min"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_max_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/text_16sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_subscribe_text"
        android:layout_marginTop="@dimen/_60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/submit_button_bg"
            android:onClick="onBuyPressed"
            android:paddingBottom="@dimen/_10dp"
            android:paddingLeft="@dimen/_30dp"
            android:paddingRight="@dimen/_30dp"
            android:paddingTop="@dimen/_10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/subscribe_package_subscribe"
            android:textSize="@dimen/text_18sp" />


    </LinearLayout>
</RelativeLayout>