<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C4747"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#3b3b3b"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10dp"

                android:layout_marginRight="@dimen/_10dp"

                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_help_one_text_footer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scrollbars = "vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13sp" />



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!--  <TextView
          android:id="@+id/tv_help_one_web"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_10dp"
          android:layout_marginBottom="@dimen/_50dp"
          android:gravity="center"
          android:text="www.callmesoft.com"
          android:textColor="@color/white"
          android:textSize="@dimen/text_12sp"
          android:visibility="visible" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/submit_button_bg"
            android:gravity="center"
            android:text="@string/policy_deny_message"
            android:textColor="@color/white"
            android:padding="@dimen/_5dp"
            android:textSize="@dimen/text_16sp" />
        <TextView
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/alert_dialog_yes_bg"
            android:gravity="center"
            android:text="@string/policy_deny_message"
            android:textColor="@color/white"
            android:padding="@dimen/_5dp"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:padding="@dimen/_5dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@drawable/alert_dialog_yes_bg"></TextView>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_allow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5dp"
            android:padding="@dimen/_5dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@drawable/submit_button_bg"
            android:gravity="center"
            android:text="@string/policy_allow_message"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>

</LinearLayout>