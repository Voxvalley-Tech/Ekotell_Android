<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/lcdscreen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView5"
            android:background="@drawable/firstcall_rounded_edittext_dialnumber"
            android:cursorVisible="true"
            android:ems="10" 
            android:focusable="true"
            android:gravity="right"
            android:inputType="phone"
            android:paddingRight="10dp"
            android:textColor="@color/black_50"
            android:textColorHint="@color/black_50"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_erase_number_normal"
            android:padding="8dp" />

        <View
            android:id="@+id/vieew"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tablelayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/dtmf_end_call_button"
        android:layout_below="@+id/lcdscreen">

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/imageButton_dialpad_1"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_2"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_3"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/imageButton_dialpad_4"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_5"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_6"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/imageButton_dialpad_7"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_8"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_9"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/imageButton_dialpad_plus"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="50dp"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_0"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />

            <TextView
                android:id="@+id/imageButton_dialpad_hash"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/firstcall_dialpad_button_selector1"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/black"
                android:textSize="@dimen/text_25sp" />
        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/view7"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:layout_above="@+id/view6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/dtmf_end_call_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/view7"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/view7"
        android:layout_toStartOf="@+id/view7"
        android:background="@color/alert_btn_yes_bg_color"
        android:gravity="center"
        android:text="@string/incall_keypad_end_call"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp" />

    <Button
        android:id="@+id/dtmf_hide_keypad_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/view7"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/view7"
        android:layout_toRightOf="@+id/view7"
        android:background="@color/black_30"
        android:gravity="center"
        android:text="@string/incall_keypad_hide_keypad"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>