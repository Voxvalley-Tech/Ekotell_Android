<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view5"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/_14dp"
            android:text="@string/alert_info_title"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/white_30"
            android:textSize="@dimen/text_18sp" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp"
            android:layout_above="@+id/view4"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_above="@+id/view4"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/editText1"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/white_30"
            android:textSize="@dimen/text_16sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/alert_info_message"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/text_14sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5dp"
            android:layout_above="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10dp"
            android:layout_above="@+id/button6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/view7"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_5dp"
            android:layout_above="@+id/view6"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button6"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_30dp"
            android:layout_alignBottom="@+id/view7"
            android:layout_centerHorizontal="true"
            android:background="@drawable/alert_dialog_yes_bg"
            android:text="@string/alert_info_btn_ok"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</RelativeLayout>