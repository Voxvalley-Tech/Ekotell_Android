<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/dialpad_digits_drawable_selector"
    android:clickable="true"
    android:gravity="center"
    android:padding="@dimen/_5dp"
    android:orientation="vertical" >



    <TextView
        android:id="@+id/view_dialer_button_text_textView_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="2"
        android:textColor="@drawable/tab_textcolor"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
         />
    <TextView
        android:id="@+id/view_dialer_button_text_textView_numm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/tab_textcolor"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="-2dp"
        android:gravity="center"
        android:textSize="@dimen/text_18sp"
        android:textStyle="normal"
        android:visibility="gone" />
</LinearLayout>