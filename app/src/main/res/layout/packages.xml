<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8dp"
    android:layout_marginLeft="@dimen/_15dp"
    android:layout_marginRight="@dimen/_15dp"
    android:layout_marginTop="@dimen/_8dp"
    android:background="@drawable/shadow_133232"
    android:padding="@dimen/_10dp">

    <RelativeLayout
        android:id="@+id/ll_subscribe_package_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="#434343" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/comment_title"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="#8d8d8d" />

            <TextView
                android:id="@+id/tv_max_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:text=""
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="#8d8d8d" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_dialpad_normal"
            android:gravity="center">

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_12sp" />

        </LinearLayout>

        <!-- below textview change rating bg color
        4.0 t o5.0 -> green
        2.5 to 3.9 -> orange
        1.0 to 2.5 -> red
        -->
    </RelativeLayout>
</RelativeLayout>