<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70dp"
    android:background="@drawable/chat_item_selector"
    android:gravity="center_vertical"
    android:padding="@dimen/_10dp">

    <RelativeLayout
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_image"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:src="@mipmap/ic_contact_avatar"
            card_view:civ_border_overlay="false" />

        <ImageView
            android:id="@+id/selected_image"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_2dp"
            android:src="@drawable/ic_selected"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text=""
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/black_50"
            android:textSize="@dimen/text_17sp" />

        <TextView
            android:id="@+id/contact_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text=""
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>


</LinearLayout>