<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <!--todo button-->

    <LinearLayout
        android:id="@+id/ll_call_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_5dp"
        android:gravity="center_vertical"
        android:background="@drawable/item_click_bg"
        android:paddingTop="@dimen/_5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_contact_details"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:src="@drawable/ic_status_profile_avathar" />

            <ImageView
                android:id="@+id/iv_contact_details_app_contact"
                android:layout_width="@dimen/_10dp"
                android:layout_height="@dimen/_10dp"
                android:layout_gravity="top|right"
                android:layout_marginLeft="-10dip"
                android:layout_toRightOf="@+id/iv_contact_details"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:background="@drawable/ic_talkr_status" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_contacts_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_1dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black_50"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_contacts_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_toRightOf="@+id/imageView6"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_1dp"
                    android:singleLine="true"
                    android:text=""
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="#8d8d8d"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_toRightOf="@+id/imageView6"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_1dp"
                    android:singleLine="true"
                    android:text=""
                    android:fontFamily="@font/ubuntu_regular"
                    android:textColor="#8d8d8d"
                    android:textSize="@dimen/text_12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contacts_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/tv_contacts_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_call_details"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_5dp"
                        android:paddingRight="@dimen/_3dp"/>

                    <TextView
                        android:id="@+id/tv_contacts_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingRight="@dimen/_3dp"
                        android:paddingTop="@dimen/_5dp"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/text_22sp" />

                    <TextView
                        android:id="@+id/tv_contacts_video"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingBottom="@dimen/_10dp"
                        android:paddingRight="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/text_22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_contacts_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:paddingLeft="@dimen/_10dp"
                        android:paddingRight="@dimen/_15dp"
                        android:paddingTop="@dimen/_5dp"
                        android:textColor="#b3b3b3"
                        android:textSize="@dimen/text_22sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>